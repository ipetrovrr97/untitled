.wrap
    margin auto
    text-align center
    width 100%
    max-width 1000px

.row
    margin 0 -15px

.block-center
    margin auto
    @media (min-width 768px)
        width 66.66666667%

.text-left
    text-align left

.text-right
    text-align right

.text-center
    text-align center

@media (min-width 480px)
    .pull-left
        float left
    .pull-right
        float right

.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12
    position relative
    min-height 1px
    padding 0 15px
    @media (min-width 720px)
        display inline-block
        vertical-align top

@media (min-width 720px)
    .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12
        width 100%
    .col-5
        width 83.33333333%
    .col-4
        width 66.66666667%
    .col-3
        width 50%
    .col-2
        width 33.33333333%
    .col-1
        width 16.66666667%

@media (min-width 1024px)
    .col-12
        width 100%
    .col-11
        width 91.66666667%
    .col-10
        width 83.33333333%
    .col-9
        width 75%
    .col-8
        width 66.66666667%
    .col-7
        width 58.33333333%
    .col-6
        width 50%
    .col-5
        width 41.66666667%
    .col-4
        width 33.33333333%
    .col-3
        width 25%
    .col-2
        width 16.66666667%
    .col-1
        width 8.33333333%